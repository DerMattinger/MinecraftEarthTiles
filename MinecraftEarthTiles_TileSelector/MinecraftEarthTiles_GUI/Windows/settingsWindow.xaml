                                    </ComboBox>
                                    <CheckBox x:Name="chb_stateBorders" Content="State Borders" IsChecked="False"/>
                                    <CheckBox x:Name="chb_buildings" Content="Urban Groundcover" IsChecked="False"/>
                                    <CheckBox x:Name="chb_highways" Content="Highways" IsChecked="True"/>
                                    <CheckBox x:Name="chb_streets" Content="Normal Streets" IsChecked="True"/>
                                    <CheckBox x:Name="chb_ores" Content="Additional ores" IsChecked="True"/>
                                    <CheckBox x:Name="chb_netherrite" Content="Rare Netherite in the Overworld" IsChecked="True"/>
                                    <Label x:Name="lbl_OreModifier" Content="Amount of ores"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0"  HorizontalAlignment="Left">
                                            <Label x:Name="lbl_OreModifierLess" Content="Less"/>
                                        </Grid>
                                        <Grid Grid.Column="1"  HorizontalAlignment="Center">
                                            <Label x:Name="lbl_OreModifierStandard" Content="Standard"/>
                                        </Grid>
                                        <Grid Grid.Column="2"  HorizontalAlignment="Right">
                                            <Label x:Name="lbl_OreModifierMore" Content="More"/>
                                        </Grid>
                                    </Grid>
                                    <Slider x:Name="sld_OreModifier" Margin="20 0" Minimum="1" Maximum="15" Value="8" IsSnapToTickEnabled="True" TickFrequency="1"/>
