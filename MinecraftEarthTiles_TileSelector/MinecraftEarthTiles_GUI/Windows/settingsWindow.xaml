                                </StackPanel>

                            </GroupBox>
                            <GroupBox Header="Detailed Features" Margin="10">
                                <StackPanel>
                                    <CheckBox x:Name="chb_streams" Content="Streams *" IsChecked="false"/>
                                    <CheckBox x:Name="chb_small_streets" Content="Small Streets *" IsChecked="false"/>
                                    <CheckBox x:Name="chb_farms" Content="OSM Farms *" IsChecked="True"/>
                                    <CheckBox x:Name="chb_meadows" Content="OSM Meadows *" IsChecked="True"/>
                                    <CheckBox x:Name="chb_quarrys" Content="Exposed Quarrys *" IsChecked="True"/>
                                    <CheckBox x:Name="chb_forest" Content="OSM Forests *" IsChecked="True"/>
