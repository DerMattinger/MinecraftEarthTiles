                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Map generation">
                    <ScrollViewer>
                        <StackPanel>
                            <GroupBox Header="Re-use / Keep Options" Margin="10">
                                <StackPanel>
                                    <CheckBox x:Name="chb_geofabrik" Content="pbf from Geofabrik or planet.osm.pbf" IsChecked="True"/>
                                    <CheckBox x:Name="chb_keepPbfFiles" Content="Keep filtered *.pbf (output.o5m) file" IsChecked="True"/>
                                    <CheckBox x:Name="chb_reUsePbfFiles" Content="Re-use filtered *.pbf (output.o5m) file" IsChecked="false"/>
                                    <CheckBox x:Name="chb_keepOsmFiles" Content="Keep *.osm files for each Tile" IsChecked="false"/>
                                    <CheckBox x:Name="chb_reUseOsmFiles" Content="Re-use *.osm files for each Tile" IsChecked="false"/>
