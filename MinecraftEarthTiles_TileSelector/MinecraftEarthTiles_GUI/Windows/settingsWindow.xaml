                                        <ComboBoxItem Content="1.12"/>
                                        <ComboBoxItem Content="1.16"/>
                                        <ComboBoxItem Content="1.17"/>
                                        <ComboBoxItem Content="1.18"/>
                                        <ComboBoxItem Content="1.19"/>
                                        <ComboBoxItem IsSelected="True" Content="1.20"/>
                                    </ComboBox>
                                    <Label x:Name="lbl_WorldName" Content="World name"/>
                                    <TextBox x:Name="txb_WorldName"/>
                                    <Label x:Name="lbl_MapOffset" Content="Map Offset"/>
                                    <ComboBox x:Name="cbb_MapOffset">
                                        <ComboBoxItem Content="-1"/>
                                        <ComboBoxItem IsSelected="True" Content="0"/>
                                        <ComboBoxItem Content="1"/>
                                    </ComboBox>
                                    <Label x:Name="lbl_LowerBuildLimit" Content="Lower Build Limit *"/>
                                    <ComboBox x:Name="cbb_LowerBuildLimit">
                                        <ComboBoxItem Content="0"/>
                                        <ComboBoxItem IsSelected="True" Content="-64"/>
                                        <ComboBoxItem Content="-128"/>
                                        <ComboBoxItem Content="-256"/>
                                        <ComboBoxItem Content="-512"/>
                                        <ComboBoxItem Content="-1024"/>
                                        <ComboBoxItem Content="-2032"/>
                                    </ComboBox>
                                    <Label x:Name="lbl_UpperBuildLimit" Content="Upper Build Limit *"/>
                                    <ComboBox x:Name="cbb_UpperBuildLimit">
                                        <ComboBoxItem Content="256"/>
                                        <ComboBoxItem IsSelected="True" Content="320"/>
                                        <ComboBoxItem Content="512"/>
                                        <ComboBoxItem Content="1024"/>
                                        <ComboBoxItem Content="1536"/>
                                        <ComboBoxItem Content="2032"/>
                                    </ComboBox>
                                    <TextBlock TextWrapping="Wrap" Foreground="Red" x:Name="lbl_BuildLimitInfo" Text="* Only works with Minecraft 1.18+'"/>
                                    <CheckBox x:Name="chb_VanillaPopulation" Content="Populate Map *" IsChecked="false"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="Red" x:Name="lbl_VanillaPopulation_Info" Text="* Only works with Minecraft 1.12 and 1.18+'"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Map features">
                    <ScrollViewer>
                        <StackPanel>
                            <GroupBox Header="Heightmap" Margin="10">
                                <StackPanel>
                                    <CheckBox x:Name="chb_HeightmapErrorCorrection" Content="Heightmap Error Correction" IsChecked="True" />
                                    <CheckBox x:Name="chb_OfflineHeightmap" Content="High Quality heightmaps (Addon)" IsChecked="False"/>
                                    <CheckBox x:Name="chb_Bathymetry" Content="Bathymetry (Addon)" IsChecked="True"/>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Terrain" Margin="10">
                                <StackPanel>
                                    <Label x:Name="lbl_TerrainMapping" Content="Terrain Mapping"/>
                                    <ComboBox x:Name="cbb_TerrainMapping">
                                        <ComboBoxItem IsSelected="True" Content="Standard"/>
                                        <ComboBoxItem Content="Custom"/>
                                    </ComboBox>
                                    <Label x:Name="lbl_TerrainSource" Content="Terrain Source"/>
                                        <ComboBox x:Name="cbb_TerrainSource">
                                            <ComboBoxItem Content="High Quality Offline Terrain (Addon)"/>
                                            <ComboBoxItem Content="Low Quality Offline Terrain"/>
                                            <ComboBoxItem IsSelected="True" Content="Arcgis"/>
                                            <ComboBoxItem Content="Google"/>
                                            <ComboBoxItem Content="Bing"/>
                                        </ComboBox>
                                        <Button Margin="10" x:Name="btn_ArcGis_Test" Click="ArcGis_Test_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Web" VerticalAlignment="Center"/>
                                            <TextBlock>Test ArcGIS Access</TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <Label x:Name="lbl_TerrainModifier" Content="Terrain Modifier"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.4*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1.4*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0"  HorizontalAlignment="Left">
                                            <Label x:Name="lbl_TerrainModifierMuchSandier" Content="Dryest"/>
                                        </Grid>
                                        <Grid Grid.Column="1"  HorizontalAlignment="Left">
                                            <Label x:Name="lbl_TerrainModifierSandier" Content="Dryer"/>
                                        </Grid>
                                        <Grid Grid.Column="2"  HorizontalAlignment="Center">
                                            <Label x:Name="lbl_TerrainModifierNone" Content="None"/>
                                        </Grid>
                                        <Grid Grid.Column="3"  HorizontalAlignment="Right">
                                            <Label x:Name="lbl_TerrainModifierGreener" Content="Greener"/>
                                        </Grid>
                                        <Grid Grid.Column="4"  HorizontalAlignment="Right">
                                            <Label x:Name="lbl_TerrainModifierMuchGreener" Content="Greenest"/>
                                        </Grid>
                                    </Grid>
                                    <Slider x:Name="sld_TerrainModifier" Margin="20 0" Minimum="-2" Maximum="2" Value="0" IsSnapToTickEnabled="True" TickFrequency="1"/>
                                </StackPanel>
                            </GroupBox>
                            
                            <GroupBox Header="Basic Features" Margin="10">
                                <StackPanel>
                                    <Label x:Name="lbl_BiomeSource" Content="Biome Source"/>
                                    <ComboBox x:Name="cbb_BiomeSource">
                                        <ComboBoxItem IsSelected="true" Content="Köppen Climate Classification"/>
                                        <ComboBoxItem Content="Terrestrial Ecoregions (WWF)"/>
                                    </ComboBox>
                                    <CheckBox x:Name="chb_rivers" Content="Rivers" IsChecked="True"/>
                                    <Label x:Name="lbl_RiverSize" Content="River Amount / Size"/>
                                    <ComboBox x:Name="cbb_Rivers">
                                        <ComboBoxItem Content="All (small)"/>
                                        <ComboBoxItem Content="All (medium)"/>
                                        <ComboBoxItem Content="All (large)"/>
                                        <ComboBoxItem Content="Major"/>
                                        <ComboBoxItem IsSelected="True" Content="Major + Minor"/>
                                    </ComboBox>
                                    <Label x:Name="lbl_waterBodies" Content="Water Bodies Amount"/>
                                    <ComboBox x:Name="cbb_waterBodies">
                                        <ComboBoxItem Content="All"/>
                                        <ComboBoxItem IsSelected="True" Content="Major"/>
                                    </ComboBox>
                                    <CheckBox x:Name="chb_Borders" Content="Borders" IsChecked="True"/>
                                    <Label x:Name="lbl_BorderYear" Content="Border Year"/>
