<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MinecraftEarthTiles_GUI"
        x:Class="SettingsWindow"
        mc:Ignorable="d"
        Title="Minecraft Earth Tiles Settings" Width="620" Height="450" MinWidth="620" MinHeight="400" Loaded="Window_Loaded"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="{DynamicResource MaterialDesignToolBarBackground}">
            <MenuItem>
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Menu"/>
                </MenuItem.Icon>
                <MenuItem Header="Save" Click="Save_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="ContentSave"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save and close" Click="Save_Close_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="ContentSaveMove"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Reset settings" Click="Reset_Settings_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Delete"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Load world specific settings from file" Click="Load_World_Settings_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="FileUpload"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Load Tiles specific settings from file" Click="Load_Tiles_Settings_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="FileUpload"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save world specific settings to file" Click="Save_World_Settings_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="FileDownload"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save Tiles specific settings to file" Click="Save_Tiles_Settings_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="FileDownload"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Close" Click="Close_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Close"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help" Click="Help_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Help" VerticalAlignment="Center"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>
        <DockPanel DockPanel.Dock="Bottom" Background="{DynamicResource MaterialDesignToolBarBackground}">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="10">
                <Button x:Name="btn_Save_Settings" Click="Save_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center"/>
                        <TextBlock>Save</TextBlock>
                    </StackPanel>
                </Button>
                <Grid Width="10"/>
                <Button x:Name="btn_Cancel_Settings" Click="Close_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center"/>
                        <TextBlock>Close</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Vertical" Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="lbl_Scale" Content="Scale (Equator / Tropic of Cancer):"/>
                    <Label x:Name="lbl_ScaleQuantity" Content="1:?"/>
                    <Label x:Name="lbl_ScaleSeperator" Content="/"/>
                    <Label x:Name="lbl_ScaleRoundedQuantity" Content="1:?"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <Grid>
            <TabControl TabStripPlacement="Left">
                <TabItem Header="Folder and path settings">
                    <ScrollViewer>
                        <StackPanel>
                            <GroupBox Header="Programs" Margin="10">
                                <StackPanel>
                                    <Label x:Name="lbl_PathToWorldPainterFolder" Content="Path to &quot;wpscript.exe&quot;" />
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToWorldPainter" Content="..." Click="Btn_PathToWorldPainter_Click"/>
                                        <TextBox x:Name="txb_PathToWorldPainterFile" IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToQGIS" Content="Path to &quot;QGIS install folder&quot;"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToQGIS" Content="..." Click="Btn_PathToQGIS_Click"/>
                                        <TextBox x:Name="txb_PathToQGIS"  IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToMagick" Content="Path to &quot;magick.exe&quot;"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToMagick" Content="..." Click="Btn_PathToMagick_Click"/>
                                        <TextBox x:Name="txb_PathToMagick" IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToMinutor" Content="Path to &quot;minutor.exe&quot;"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToMinutor" Content="..." Click="Btn_PathToMinutor_Click"/>
                                        <TextBox x:Name="txb_PathToMinutor" IsReadOnly="True" />
                                    </DockPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Data" Margin="10">
                                <StackPanel>
                                    <Label x:Name="lbl_PathToScriptsFolder" Content="Path to scripts folder"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToScriptsFolder" Content="..." Click="Btn_PathToScriptFolder_Click"/>
                                        <TextBox x:Name="txb_PathToScriptsFolder"  IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToPBF" Content="Path to &quot;*.pbf&quot; File"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToPBF" Content="..." Click="Btn_PathToPBF_Click"/>
                                        <TextBox x:Name="txb_PathToPBF" IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToOSMTemp" Content="Path for temporary osm files"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToOSMTemp" Content="..." Click="Btn_PathToOSMTemp_Click"/>
                                        <TextBox x:Name="txb_PathToOSMTemp" IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToQGISProject" Content="Path where &quot;MinecraftEarthTiles.qgz&quot; is located"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToQGISProject" Content="..." Click="Btn_PathToQGISProject_Click"/>
                                        <TextBox x:Name="txb_PathToQGISProject" IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToQGISProjectBathymetryAddon" Content="Path where &quot;MinecraftEarthTiles__Bathymetry.qgz&quot; is located"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToQGISProjectBathymetryAddon" Content="..." Click="Btn_PathToQGISProjectBathymetryAddon_Click"/>
                                        <TextBox x:Name="txb_PathToQGISProjectBathymetryAddon" IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToQGISProjectTerrainAddon" Content="Path where &quot;MinecraftEarthTiles__Terrain.qgz&quot; is located"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToQGISProjectTerrainAddon" Content="..." Click="Btn_PathToQGISProjectTerrainAddon_Click"/>
                                        <TextBox x:Name="txb_PathToQGISProjectTerrainAddon" IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToQGISProjectHeightmapAddon" Content="Path where &quot;MinecraftEarthTiles__Heightmap&quot; is located"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToQGISProjectHeightmapAddon" Content="..." Click="Btn_PathToQGISProjectHeightmapAddon_Click"/>
                                        <TextBox x:Name="txb_PathToQGISProjectHeightmapAddon" IsReadOnly="True" />
                                    </DockPanel>
                                    <Label x:Name="lbl_PathToExport" Content="Export folder"/>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" x:Name="btn_PathToExport" Content="..." Click="Btn_PathToExport_Click"/>
                                        <TextBox x:Name="txb_PathToExport" IsReadOnly="True" />
                                    </DockPanel>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
